<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MapActivity"
    android:background="#fffcfff6">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        />

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:background="@drawable/back"
        android:paddingLeft="20dp"
        >

        <RelativeLayout
            android:layout_width="@dimen/activity_tupian_margin"
            android:layout_height="@dimen/activity_button_margin"

            >
            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_message_btn"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:textColor="@drawable/tab_textcolor"
                android:textSize="12sp" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"></LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/activity_tupian_margin"
            android:layout_height="@dimen/activity_button_margin"
            >

            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_contact_btn"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:textColor="@drawable/tab_textcolor"
                android:textSize="12sp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"></LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/activity_tupian_margin"
            android:layout_height="@dimen/activity_button_margin"
            >

            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_set_btn"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:textColor="@drawable/tab_textcolor"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
